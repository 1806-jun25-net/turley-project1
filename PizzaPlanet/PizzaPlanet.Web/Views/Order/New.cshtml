@{
    ViewData["Title"] = "New Order";
}

<h2>New Order</h2>

<h4>PizzaOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method=post asp-action="Create">
            <div class="form-group">
                <label>Store</label>
                <select name ="id" class ="form-control"   options="ViewBag.StoreId">
                    @foreach(int id in (IEnumerable<int>)ViewData["StoreIds"])
                    {
                        <option value="@id">@id</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Begin Order" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
